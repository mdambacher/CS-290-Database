<h2>Workouts</h2>
<p>{{results}}</p>
{{#if results}}
<table>
	<tr>
		<td>Workouts</td>
	</tr>
	<tr>
		<td>Name</td>
		<td>Reps</td>
		<td>Weight</td>
		<td>Date</td>
		<td>LBs</td>
	</tr>
  {{#each results}}
  <tr>
  	<td>test</td>
    <td>{{this.name}}</td>
	<td>{{this.reps}}</td>
	<td>{{this.weight}}</td>
	<td>{{this.date}}</td>
	<td>{{this.lbs}}</td>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </tr>
  {{/each}}
</table>
{{/if}}
